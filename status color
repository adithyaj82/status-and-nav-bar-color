//////status + navigation bar same color

navigationController?.navigationBar.tintColor = UIColor(colorLiteralRed: 255/255, green: 255/255, blue: 255/255, alpha: 1)
        navigationController?.navigationBar.barTintColor = UIColor(colorLiteralRed: 17/255, green: 94/255, blue: 41/255, alpha: 1)
        
        navigationController?.navigationBar.titleTextAttributes = [NSForegroundColorAttributeName: UIColor.white]



////only status bar and manually add nav bar

 let statusBar: UIView = UIApplication.shared.value(forKey: "statusBar") as! UIView
        if statusBar.responds(to:#selector(setter: UIView.backgroundColor))
        {
            
            statusBar.backgroundColor = UIColor(red: 0/255, green: 73/255, blue: 85/255, alpha: 1)
            //            statusBar.backgroundColor = UIColor.blue
        }
